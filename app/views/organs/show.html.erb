<div class="show-layout lebonrein-container">
  <h1 class= "show-title"><%= @organ.name %></h1>


  <div class= "organ-content">
    <img src="https://media.istockphoto.com/photos/human-heart-picture-id1320314279?k=20&m=1320314279&s=612x612&w=0&h=1zBoPZM6Ww3osHlB8gP_4n_oiD4e1BZhd6JOiyh1wcU=" alt="">
    <div class="organ-info">
     <p><%= @organ.category %></p>
     <p><%= @organ.description %></p>

    <div class="organ-info-bottom">
      <h2><%= @organ.pricing %>€</h2>
      <div class="btn-buy">
      <%= link_to "Reserver", organ_booking_path(@organ), data: { turbo_method: :patch } %>
        <a class="button" href="#">Réserver </a>
      </div>
    </div>
     <% if @organ.user == current_user %>
  <%= link_to "Modifier", edit_organ_path %>
  <%= link_to "Supprimer", organ_path(@organ), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
    </div>
  </div>
</div>
